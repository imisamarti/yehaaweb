<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title> Yeeha </title>
             <!--Links-->
             <link rel="icon" type="image/png" sizes="16x16" href="https://imgur.com/a/n73vzbZ">
             <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <link href="https://fonts.googleapis.com/css?family=Passion+One|Roboto:300" rel="stylesheet">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" href="/stylesheets/main.css">
            
    </head>
 <body>
     
     <!--Start of body-->
        <!--NAV BAR-->
     <nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
        <!--dropdown with home button ad sign in-->
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <a class="navbar-brand" href="/campgrounds">
                            <img src="https://i.imgur.com/sR9IYws.png" alt="Yeeha icon" style="width:28px;height:28px;">
                        </a>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds">Home</a></li>
                 <li role="separator" class="divider"></li>
                 <% if(!currentUser){ %>
                  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login</a></li>
                  <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a></li>
              <% } else { %>
                  <li><a href="/users/<%= currentUser._id %>">Signed In As <%= currentUser.username %></a></li>
                  <li><a href="/users/<%= currentUser._id %>/edit">Edit Profile</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/logout">Logout</a></li>
              <% } %>
              </ul>
            </div>
        </div>
        
        <!--search bar and add campground-->
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <form action="/campgrounds" method="GET" class="navbar-form navbar-right">
                  <div class="form-group">
                      <input type="text" name="search" placeholder="Start searching for a campground..." class="form-control">
                    </div>      
                      <button type="submit" class="btn btn-primary btn-search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                      <a href="/campgrounds/new"><span class="btn btn-primary glyphicon glyphicon-plus btn-add"></span></a>  
         </form>
            
          </ul>
        </div>
    </div>
</nav>

<!--These are the Flash Messages-->

 <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
        <% if(info && info.length > 0){ %>
            <div class="alert alert-info" role="alert">
                <%= info %>
            </div>
        <% } %>
    </div>