<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="container">
        <h1 style= "text-align:center"> Edit profile<%= user.name %></h1>
        <div style = "width:30%; margin:30px auto;">
        <form action="/users/<%=user._id %>?_method=PUT" method="POST">
            <div class="form-group">
            <input class="form-control" required type="text" name="user[firstName]" placeholder="First name" value="<%= user.firstName %>">
            </div>
             <div class="form-group">
            <input class="form-control" required type="text" name= "user[lastName]" placeholder="Last name" value="<%= user.lastName %>">
            </div>
             <div class="form-group">
            <input class="form-control" required type="text" name="user[info]" placeholder="Information" value="<%=user.info %>" maxlength="50">
            </div>
            <div class="form-group">
            <input class="form-control" required type="text" name="user[avatar]" placeholder="Add profile image" value="<%= user.avatar%>">
            </div>
             <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
            
        </form>
        <a class="btn  btn-default btn-lg" href="/users/<%= currentUser._id %>"> Go back</a>
        </div>
        
        </div>
    </div>
</div>
<% include ../partials/footer %>