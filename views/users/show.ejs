<% include ../partials/header %>

<div class="container">
 <div class="container">    
    <div class="row">
        <div class="col-md-4">
            <div class="thumbnail profile-pic">
                
                <img src= "<%= user.avatar %>" alt ="user profile image">
            </div>
         <h1 class="profile-names"><%= user.firstName + " " + user.lastName %> </h1>    
        </div>
        <!--image and user name ending-->
        <h3>User information:</h3>
        <div class="col-md-7 profile-info">
            <%= user.info %>
        </div>
    </div>
 </div>        
    <!--end of user info-->
 <div class="container">
    <div class="row">
      <div class"col-md-12">
      
        <h3><%= user.username%>'s campgrounds:</h3> 
            <% campgrounds.forEach(function(campground){ %>
                <ul>
                    <li> <a href="/campgrounds/<%=campground.id %>"><%= campground.name %></a></li>
                </ul>
            <% }); %>
        </div>
    </div>
 </div> 
</div>


<% include ../partials/footer %>