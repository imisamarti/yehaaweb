<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="container">
            <h1 style= "text-align:center"> Edit <%= campground.name %></h1>
                <div style = "width:30%; margin:30px auto;">
                    <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" required type="text" name="campground[name]" value="<%= campground.name %>">
                        </div>
                         <div class="form-group">
                            <input class="form-control" required type="text" name= "campground[image]" value="<%= campground.image %>">
                        </div>
                         <div class="form-group">
                            <input class="form-control" required type="number" name="campground[cost]" value="<%=campground.cost %>" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input class="form-control" required type="location" name="campground[location]" value="<%=campground.location %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" required type="campground[text]" name="description" value="<%= campground.description%>">
                        </div>
                         <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Submit</button>
                        </div>
                
                    </form>
        <a class="btn  btn-default btn-lg" href="/campgrounds"> Go back</a>
        </div>
        
        </div>
    </div>
</div>
<% include ../partials/footer %>