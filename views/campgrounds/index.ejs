<% include ../partials/header %>

<div class="container">
    
    <% if(currentUser && currentUser.isAdmin) { %>
        <p><strong>Welcome, you are signed in as admin</strong></p>
    <% } %>
    
    <header class="image-index">
      <div class="container text-center index-ctc">  
        <h1>Welcome to <span class="h1-brand">Yeeha</span></h1>
            <marquee class="GeneratedMarquee" direction="left" scrollamount="4" behavior="scroll">View our hand picked campgrounds from all over the world</marquee>
          </div>
          <div class=" col-md-10 two-main-btn">  
             <form action="/campgrounds" method="GET" class="navbar-form">
                  <div class="form-group">
                      <input type="text" name="search" placeholder="Start searching for a campground..." class="form-control">
                    </div>      
                      <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                       <a class="btn btn-primary btn-sm btn-camp" href="/campgrounds/new"><span class="glyphicon glyphicon-plus"></span> Add new campground</a>

              </form>
          </div>
    </header>
    
    <div> 
        <h3>Check out our campground selection:</h3>
        <h5>These campgrounds are rated 4.5 stars and up</h5>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
       
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-4">
            <div class="thumbnail" id="index-pic-container">
                <!--<div id="index-pic-container">-->
                    <a href= "/campgrounds/<%= campground._id %>" >
                        <img src= "<%= campground.image %>">
                    </a> 
                <!--</div>-->
            <div class="caption">
            <h4><%= campground.name %> </h4>
             </div>
             <a href= "/campgrounds/<%= campground._id %>" class= "btn btn-info btn-more"> More info</a>
        </div>
    </div>    
<% }); %>
    </div>
</div>

<% include ../partials/footer %>