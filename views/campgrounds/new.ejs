<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="container">
            <h1 style= "text-align:center"> Create a new Campground</h1>
                <div style = "width:30%; margin:30px auto;">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" required type="text" name="name" placeholder="name">
                        </div>
                         <div class="form-group">
                            <input class="form-control" type="text" name= "image" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" required type="text" name="location" placeholder="location">
                            </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name= "description" placeholder="description">
                        </div>
                         <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Submit</button>
                        </div>
                    </form>
                <a class="btn  btn-default btn-lg" href="/campgrounds"> Go back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>